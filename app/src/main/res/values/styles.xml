<resources>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="EditText" parent="Theme.AppCompat.Light">

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#707070</item>
        <item name="colorControlHighlight">#707070</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorSubTitleText</item>
        <item name="android:textColorHint">@color/colorSubTitleText</item>
        <item name="hintTextColor">@color/colorSubTitleText</item>
        <item name="android:state_focused">true</item>
        <item name="android:state_hovered">true</item>
        <item name="android:state_enabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>


    <style name="textWithBackground">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
    </style>
    <style name="titleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
    </style>

    <style name="headTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
    </style>

    <style name="semiTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
    </style>
    <style name="smallTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
    </style>

    <style name="subTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSubTitleText</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
    </style>
    <style name="semiSubTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSubTitleText</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
    </style>



</resources>